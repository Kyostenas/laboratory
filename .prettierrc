{
    "trailingComma": "none",
    "semi": true,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "htmlWhitespaceSensitivity": "ignore",
    "singleAttributePerLine": true,
    "wrapAttributes": true,
    "wrapAttributesMinAttrs": 1,
    "plugins": ["prettier-plugin-tailwindcss"],
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        }
    ]
}
